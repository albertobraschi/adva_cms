<h2>Your friendships</h2>

<% unless @friendships.blank? -%>
	<% @friendships.each do |friendship| -%>
	
	<div id="<%= dom_id(friendship) %>">
		<p>
			Friendship: <%= friendship.relation.name %>
			<%= link_to 'End friendship', profile_friendship_path(friendship.user, friendship), :id => dom_id(friendship) + '_delete', :method => :delete,
		    :confirm => "Are you sure you want to end this friendship?" %>
		</p>
	</div>
	
	<% end -%>
<% else -%>
	<p>
		You do not have any friendships.
	</p>
<% end -%>

<h2>Pending friendship requests</h2>

<% unless @friendships_pending.blank? -%>
	<% @friendships_pending.each do |friendship_pending| -%>
	
	<div id="<%= dom_id(friendship_pending) %>">
		<p>
			Friendship: <%= friendship_pending.relation.name %>
			<%= link_to 'Confirmate', edit_profile_friendship_path(friendship_pending.user, friendship_pending), :id => dom_id(friendship_pending) + '_confirm' %>
		</p>
	</div>
	
	<% end -%>
<% else -%>
	<p>
		You do not have any pending friendships.
	</p>
<% end -%>