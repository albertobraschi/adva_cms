<h2>Profile: <%= @user.name %></h2>

<% if current_user == @user -%>
	<p>
		<%= link_to 'My messages', messages_path %>
	</p>
<% end -%>

<% unless current_user == @user -%>
	<p>
		<%= link_to 'Send friend request', friendships_path(:relation_id => @user, :return_to => profile_path(@user)), :method => :post,
		:confirm => "Are you sure you want to send a friend request to this user?" %> &middot;
		<%= link_to 'Banlist user', banships_path(:relation_id => @user, :return_to => profile_path(@user)), :method => :post,
		:confirm => "Are you sure you want to put this user to your banlist?" %>
	</p>
<% end -%>