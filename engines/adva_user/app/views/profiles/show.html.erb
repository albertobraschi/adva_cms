<h2>Profile: <%= @user.name %></h2>

<% if current_user == @user -%>
	<p>
		<%= link_to 'My messages', messages_path %> &middot;
		<%= link_to 'Friendslist', profile_friendships_path(@user) %> &middot;
		<%= link_to 'Banlist', profile_banships_path(@user) %>
	</p>
<% end -%>

<% unless current_user == @user -%>
	<p>
		<%= link_to 'Send friend request', profile_friendships_path(@user, :relation_id => @user, :return_to => profile_path(@user)), :method => :post,
		:confirm => "Are you sure you want to send a friend request to this user?" %> &middot;
		<%= link_to 'Banlist user', profile_banships_path(@user, :relation_id => @user, :return_to => profile_path(@user)), :method => :post,
		:confirm => "Are you sure you want to put this user to your banlist?" %>
	</p>
<% end -%>